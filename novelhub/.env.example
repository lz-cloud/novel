# NovelHub environment configuration example
# Copy this file to .env and fill in values as needed

# General
NODE_ENV=production
PORT=8080
PUBLIC_URL=http://localhost:8080

# Database (PostgreSQL)
POSTGRES_USER=novelhub
POSTGRES_PASSWORD=novelhub
POSTGRES_DB=novelhub
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://novelhub:novelhub@postgres:5432/novelhub?schema=public

# Redis
REDIS_URL=redis://redis:6379
SESSION_TTL_SECONDS=604800

# Security
JWT_SECRET=please_change_me

# OAuth 2.0 (set callback URLs to PUBLIC_URL + /api/auth/<provider>/callback)
OAUTH_GITHUB_CLIENT_ID=your_github_client_id
OAUTH_GITHUB_CLIENT_SECRET=your_github_client_secret
OAUTH_GITHUB_CALLBACK_URL=http://localhost:8080/api/auth/github/callback

OAUTH_GOOGLE_CLIENT_ID=your_google_client_id
OAUTH_GOOGLE_CLIENT_SECRET=your_google_client_secret
OAUTH_GOOGLE_CALLBACK_URL=http://localhost:8080/api/auth/google/callback

# Frontend config (Vite)
VITE_API_BASE_URL=/api

# Container images (GHCR, optional overrides)
# Set these to use pre-built images from GHCR, otherwise defaults in docker-compose.yml are used
# Examples:
# BACKEND_IMAGE=ghcr.io/your-gh-org/novelhub-backend:latest
# FRONTEND_IMAGE=ghcr.io/your-gh-org/novelhub-frontend:latest
# NGINX_IMAGE=ghcr.io/your-gh-org/novelhub-nginx:latest
